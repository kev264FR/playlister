{% extends 'base.html.twig' %}



{% block body %}
<h1 class="text-center">
    Profil de {{user.username}}
</h1>
<hr>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-center">
                Playlistes de cette utilisateur
            </h2>
                <a href="{{path("user_follow_user", {id: user.id})}}" class="btn btn-primary" onclick="handleFollowUser(event)">Follow user</a>
            <hr>
            {% for playlist in user.myPlaylists %}
            <div class="card mb-3" style="max-width: 500px;">
                <div class="row no-gutters">
                    <div class="col-md-6">
                        <div class="card-body">
                            <h2 class="card-title text-center">
                                <a href="{{path("playlist_detail", {id: playlist.id})}}">{{playlist.title}}</a>
                            </h2>
                            <p class="card-text">
                                <a href="{{path("user_like", {id: playlist.id})}}" class="btn btn-sm btn-primary" onclick="handleLike(event)">
                                    <i class="fas fa-thumbs-up"></i> <span>{{playlist.likers.count}}</span>
                                </a>
                                <a href="{{path("user_follow_playlist", {id: playlist.id})}}" class="btn btn-sm btn-primary" onclick="handleFollowPlaylist(event)">
                                    <i class="fas fa-plus-square"></i> <span>{{playlist.followers.count}}</span>
                                </a>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card-body small">
                            <p class="card-text">
                                Ajout√© le : {{playlist.createdAt | date("d/m/Y H:i")}}
                            </p>
                            {% if playlist.lastUpdate != null %}
                                <p class="card-text text-muted">Mise a jour le : {{playlist.lastUpdate | date("d/m/Y H:i")}}</p>
                            {% endif %}
                            <p>
                                Likes : {{playlist.likers.count()}}
                            </p>
                        </div>
                    </div>
                </div>
            </div>   
        {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
