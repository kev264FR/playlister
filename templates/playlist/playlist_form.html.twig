{% extends "base.html.twig" %}

{% block breadcrumb %}
    {{parent()}}
    <li class="breadcrumb-item">
        <a href="{{path("public_profile", {id: app.user.id})}}">
            {{app.user.username}}
        </a>            
    </li>
    {% if edit %}
    <li class="breadcrumb-item">
        <a href="{{path("playlist_edit", {id: playlist.id})}}">
            {{playlist.title}}
        </a>            
    </li>
    {% else %}
    <li class="breadcrumb-item">
        <a href="{{path("playlist_new")}}">
            Nouvelle playlist
        </a>            
    </li>
    {% endif %}
{% endblock %}

{% block body %}
{% if edit %}
<h1 class="text-center">
    Modification du titre de la playlist : {{playlist.title}}
</h1>
{% else %}
<h1 class="text-center">
    Cr√©ation d'une playlist
</h1>
{% endif %}
<hr>

{{form_start(form, {attr: {class: "user-form"}})}}
    {{form_row(form.title)}}

    {% if edit %}
        <input class="btn btn-success" type="submit" value="Modifier">
    {% else %}
        <input class="btn btn-success" type="submit" value="Ajouter">
    {% endif %}
{{form_end(form)}}

{% endblock %}