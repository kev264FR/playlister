{% extends 'base.html.twig' %}



{% block body %}

<h1 class="text-center">
    {% if app.user and app.user == user %}
            Mon profil public
        {% else %}
            Profil de {{user.username}}
    {% endif %}
</h1>
{% if app.user and is_granted("ROLE_ADMIN") and app.user != user %}
    {% if 'ROLE_ADMIN' in user.roles %}
    <a href="{{path("admin_switch", {id: user.id})}}" class="btn btn-warning">Retire les droits admin</a>
    {% else %}
    <a href="{{path("admin_switch", {id: user.id})}}" class="btn btn-warning">Ajouter les droits admin</a>
    {% endif %}

    {% if 'ROLE_BANNED' in user.roles %}
    <a href="{{path("ban_switch", {id: user.id})}}" class="btn btn-success">Unban</a>
    {% else %}
    <a href="{{path("ban_switch", {id: user.id})}}" class="btn btn-success">Ban</a>
    {% endif %}

    <a href="{{path('delete_account', {id: user.id})}}" class="btn btn-danger">Supprimer le compte</a>

{% endif %}

{% if app.user and app.user == user %}
        <a href="#" class="btn btn-primary disabled">Follow user</a>
    {% else %}
    {% if user in app.user.followedUsers %}
    <a href="{{path("user_follow_user", {id: user.id})}}" class="btn btn-primary" onclick="handleFollowUser(event)">Ne plus suivre</a>
    {% else %}
    <a href="{{path("user_follow_user", {id: user.id})}}" class="btn btn-primary" onclick="handleFollowUser(event)">Follow user</a>
    {% endif %}
{% endif %}

<hr>
<h2 class="text-center">
    Playlistes de cette utilisateur
</h2>

{% for playlist in user.myPlaylists %}
    <div class="card mb-3" style="max-width: 700px;">
        <div class="row no-gutters">
            <div class="col-md-3">
                {% if playlist.contents.count > 0 %}
                    {% set lastElement = playlist.contents.last %}
                    <img src="{{lastElement.platform.imgUrl | replace({"_content_": lastElement.contentId})}}" class="card-img">

                    {% else %}
                    <img src="{{asset("img/no-image-available.png")}}" class="card-img" alt="Pas d'image disponible">
                {% endif %}  
            </div>
            <div class="col-md-4">
                <div class="card-body">
                    <h2 class="card-title text-center">
                        <a href="{{path("playlist_detail", {id: playlist.id})}}">{{playlist.title}}</a>
                    </h2>
                    <p class="card-text">
                        {% if app.user and app.user == user %}
                            <a href="#" class="btn btn-sm btn-primary disabled">
                                <i class="fas fa-thumbs-up"></i> <span>{{playlist.likers.count}}</span>
                            </a>
                            <a href="#" class="btn btn-sm btn-primary disabled">
                                <i class="fas fa-plus-square"></i> <span>{{playlist.followers.count}}</span>
                            </a>
                            <a href="{{path("playlist_delete", {id: playlist.id})}}" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                            <a href="{{path("playlist_edit", {id: playlist.id})}}" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i>
                            </a>
                        {% else %}
                            <a href="{{path("user_like", {id: playlist.id})}}" class="btn btn-sm btn-primary" onclick="handleLike(event)">
                                <i class="fas fa-thumbs-up"></i> <span>{{playlist.likers.count}}</span>
                            </a>
                            <a href="{{path("user_follow_playlist", {id: playlist.id})}}" class="btn btn-sm btn-primary" onclick="handleFollowPlaylist(event)">
                                <i class="fas fa-user"></i> <span>{{playlist.followers.count}}</span>
                            </a>
                        {% endif %}
                        
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card-body small">
                    <p class="card-text">
                        Ajout√© le : {{playlist.createdAt | date("d/m/Y H:i")}}
                    </p>
                    {% if playlist.lastUpdate != null %}
                        <p class="card-text text-muted">Mise a jour le : {{playlist.lastUpdate | date("d/m/Y H:i")}}</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>   
{% endfor %}

{% endblock %}
