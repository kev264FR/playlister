{% extends 'base.html.twig' %}


{% block body %}
<h1 class="text-center">
    Espace admin
</h1>
<hr>

<div class="list-group list-group-horizontal admin-list">
    <a href="{{path("platforms_list")}}" class="list-group-item list-group-item-action text-primary">Voir les
        plateformes</a>
    <a href="{{path("playlists_admin")}}" class="list-group-item list-group-item-action text-primary">Toutes les
        playlistes</a>
    <a href="{{path("users_admin")}}" class="list-group-item list-group-item-action text-primary">Gestion des
        utilisateurs</a>
</div>

<div id="last-playlists">
    <h2 class="text-center margin-top-30">
        Les 4 dernières Playlistes créés
    </h2>
    <hr>

    {% for playlist in playlists %}
    <div class="card mb-3">
        <div class="row no-gutters">
            <div class="col-md-3">
                {% if playlist.contents.count > 0 %}
                {% set lastElement = playlist.contents.last %}
                <img src="{{lastElement.platform.imgUrl | replace({"_content_": lastElement.contentId})}}"
                    class="card-img">
                {% else %}
                <img src="{{asset("img/no-image-available.png")}}" class="card-img" alt="Pas d'image disponible">
                {% endif %}
            </div>
            <div class="col-md-3 card-body p-3">
                <h4 class="card-title">
                    <a href="{{path("playlist_detail", {id: playlist.id})}}">{{playlist.title}}</a>
                </h4>
                <div class="card-text small">
                    {% if playlist.user %}
                    <p>
                        Ajouté par :
                        <a class="font-italic" href="{{path("public_profile", {id: playlist.user.id})}}">
                            {{playlist.user.username}}
                        </a>
                    </p>
                    {% else %}
                    <p>
                        Ajouté par : deleted user
                    </p>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-3 card-body small p-3 card-text">
                <p>
                    Ajouté le : {{playlist.createdAt | date("d/m/Y H:i")}}
                </p>
                {% if playlist.lastUpdate != null %}
                <p class="text-muted">Mise a jour le : {{playlist.lastUpdate | date("d/m/Y H:i")}}</p>
                {% endif %}
            </div>
            <div class="col-md-2 card-body d-flex-center">
                <div class="py-1">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <a href="{{path("user_like", {id: playlist.id})}}" class="btn btn-sm btn-primary"
                                onclick="handleLike(event)">
                                <i class="fas fa-thumbs-up"></i> <span>{{playlist.likers.count}}</span>
                            </a>
                        </li>
                        {% if app.user and is_granted("ROLE_ADMIN") or app.user and app.user == playlist.user %}
                        <li class="list-group-item">
                            <a href="{{path("playlist_edit", {id: playlist.id})}}" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i>
                            </a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
                <div class="py-1">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <a href="{{path("user_follow_playlist", {id: playlist.id})}}" class="btn btn-sm btn-primary"
                                onclick="handleFollowPlaylist(event)">
                                <i class="fas fa-user"></i> <span>{{playlist.followers.count}}</span>
                            </a>
                        </li>
                        {% if app.user and is_granted("ROLE_ADMIN") or app.user and app.user == playlist.user %}
                        <li class="list-group-item">
                            <a href="{{path("playlist_delete", {id: playlist.id})}}" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}

</div>


{% endblock %}