{% extends 'base.html.twig' %}



{% block body %}
<div class="list-group list-group-horizontal text-center">
    <a href="{{path("change_password")}}" class="list-group-item list-group-item-action text-light bg-primary">Changer de mot de passe</a>
    <a href="{{path("delete_account", {id: app.user.id})}}" class="list-group-item list-group-item-action text-light bg-danger">Supprimer mon compte</a>
    <a href="{{path("users_admin")}}" class="list-group-item list-group-item-action text-light bg-success"><i class="fas fa-plus-square"></i> Playliste</a>
</div>

<h1 class="text-center">
    Bonjour {{app.user.username}}
</h1>
<hr>

<div class="row">
    <div class="col-md-8">
        <h2 class="text-center">
            Playlistes suivies
        </h2>
        <hr>
        {% if app.user.followedPlaylists.count > 0 %}
        {% for playlist in app.user.followedPlaylists %}
        {% if playlist.public %}
            <div id="followed-playlist-{{playlist.id}}" class="card mb-3">
                <div class="row no-gutters">
                    <div class="col-md-3">
                        {% if playlist.contents.count > 0 %}
                            {% set lastElement = playlist.contents.last %}
                            <img src="{{lastElement.platform.imgUrl | replace({"_content_": lastElement.contentId})}}" class="card-img">
                            {% else %}
                            <img src="{{asset("img/no-image-available.png")}}" class="card-img" alt="Pas d'image disponible">
                        {% endif %}
                    </div>
                    <div class="col-md-4 align-self-center">
                        <div class="card-body">
                            <h4 class="card-title text-center">
                                <a href="{{path("playlist_detail", {id: playlist.id})}}">{{playlist.title}}</a>
                            </h4>
                        </div>
                    </div>
                    <div class="col-md-4 align-self-center">
                        <div class="card-body">
                            <p class="card-text text-center">
                                <a href="{{path("user_like", {id: playlist.id})}}" class="btn btn-sm btn-primary" onclick="handleLike(event)">
                                    <i class="fas fa-thumbs-up"></i> <span>{{playlist.likers.count}}</span>
                                </a>
                                <a href="{{path("user_follow_playlist", {id: playlist.id})}}" class="btn btn-sm btn-primary" onclick="handleFollowPlaylist(event)">
                                    <i class="fas fa-user"></i> <span>{{playlist.followers.count}}</span>
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}   
        {% endfor %}
        {% else %}
        <p class="text-center">
            Vous ne suivez aucune playliste.
        </p>
        {% endif %}
    </div>
    <div class="col-md-4">
        <h2 class="text-center">
            Users suivies
        </h2>
        <hr>
        {% if app.user.followedUsers.count > 0 %}
        {% for user in app.user.followedUsers %}
        <div id="followed-user-{{user.id}}" class="card text-center">
            <div class="row no-gutters">
                <div class="col-md-4 align-self-center">
                    <i class="fas fa-user-circle fa-4x"></i>
                </div>
                <div class="col-md-4">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="{{path("public_profile", {id: user.id})}}">
                                {{user.username}}
                            </a>
                        </h5>
                    </div>
                </div>
                <div class="col-md-4">
                    <p class="card-text">
                        <a href="{{path("user_follow_user", {id: user.id})}}" class="btn btn-primary mt-2" onclick="handleFollowUser(event)">Ne plus suivre</a>
                    </p>
                </div>
            </div>
        </div>
        {% endfor %}
        {% else %}
        <p class="text-center">
            Vous ne suivez personne.
        </p>
        {% endif %}
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h2 class="text-center">
            Mes Playlistes
        </h2>
        <hr>
        {% if app.user.myPlaylists.count > 0 %}
        {% for playlist in app.user.myPlaylists %}
        <div class="card mb-3">
            <div class="row no-gutters">
                <div class="col-md-3">
                    {% if playlist.contents.count > 0 %}
                        {% set lastElement = playlist.contents.last %}
                        <img src="{{lastElement.platform.imgUrl | replace({"_content_": lastElement.contentId})}}" class="card-img">
                        {% else %}
                        <img src="{{asset("img/no-image-available.png")}}" class="card-img" alt="Pas d'image disponible">
                    {% endif %}
                </div>
                <div class="col-md-3 card-body p-3 align-self-center">
                    <h4 class="card-title">
                        <a href="{{path("playlist_detail", {id: playlist.id})}}">{{playlist.title}}</a>
                    </h4>
                </div>
                <div class="col-md-3 card-body small p-3 align-self-center">
                    <p class="card-text">
                        Ajout√© le : {{playlist.createdAt | date("d/m/Y H:i")}}
                    </p>
                    {% if playlist.lastUpdate != null %}
                        <p class="card-text text-muted">Mise a jour le : {{playlist.lastUpdate | date("d/m/Y H:i")}}</p>
                    {% endif %}
                </div>
                <div class="col-md-2 card-body d-flex">
                    <div class="py-1">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <a href="#" class="btn btn-sm btn-primary disabled">
                                    <i class="fas fa-thumbs-up"></i> <span>{{playlist.likers.count}}</span>
                                </a>
                            </li>
                            <li class="list-group-item">
                                <a href="#" class="btn btn-sm btn-primary disabled">
                                    <i class="fas fa-user"></i> <span>{{playlist.followers.count}}</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="py-1">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <a href="{{path("playlist_edit", {id: playlist.id})}}" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </li>
                            <li class="list-group-item">
                                <a href="{{path("playlist_delete", {id: playlist.id})}}" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
        {% else %}
        <p class="text-center">
            Vous n'avez aucune playliste.
        </p>
        {% endif %}
    </div>
</div>
{% endblock %}
